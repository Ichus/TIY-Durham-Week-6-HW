<div class ="panel small-6 small-centered columns">
  <h1>Reset your Password</h1>
  <p>An email will be sent containing instructions to reset your password.</p>

  <%= form_tag create_password_reset_path do %>
    <p class="row">
      <p class="small-1 columns"><%= label_tag :email, "email", class: "left inline" %></p>
      <p class="small-8 columns"><%= text_field_tag :email%></p>
    </p>
    <p>
      <%= submit_tag("Reset your password") %>
    </p>
  <% end %>
</div>
