<div class="panel small-4 small-centered columns">
  <h1>Log in</h1>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :username %><br>
    <%= text_field_tag :username, params[:username] %>
  </p>
  <p>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= submit_tag("Log in") %>
  </p>
<% end %>
<p class="row">
  <%= link_to "Forgot Password?", "#", class: ["small-4", "columns"] %>
  <%= link_to "Sign Up", sign_up_path, class: ["small-4", "columns"] %>
</p>
</div>
